<?xml version="1.0" encoding="utf-8"?>
<mule xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:cxf="http://www.mulesoft.org/schema/mule/cxf"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/3.2/mule.xsd
		http://www.mulesoft.org/schema/mule/cxf http://www.mulesoft.org/schema/mule/cxf/3.2/mule-cxf.xsd">

	<custom-transformer name="rivTransformer"
		class="se.skl.tp.vp.vagvalrouter.RivTransformer">
		<spring:property name="vagvalAgent" ref="vagvalAgent" />
		<spring:property name="senderIdPropertyName" value="${VAGVALROUTER_SENDERID}" />
	</custom-transformer>

	<spring:bean name="vagvalInputs"
		class="se.skl.tp.vp.vagvalagent.SokVagvalsInfoMockInput" />

	<spring:bean name="vagvalAgent" class="se.skl.tp.vp.vagvalagent.VagvalAgent">
		<spring:property name="endpointAddress"
			value="http://localhost:8888/tp-vagval-admin-services/SokVagvalsInfo" />
		<spring:property name="addressDelimiter" value="#" />
	</spring:bean>


	<!-- TODO: Add teststub-service specific definitions here -->
	<flow name="vagval-teststub-flow">
		<inbound-endpoint
			address="http://localhost:8888/tp-vagval-admin-services/SokVagvalsInfo" />
		<cxf:jaxws-service serviceClass="se.skl.tp.vp.vagvalagent.SokVagvalsInfoMock" />
		<component>
			<singleton-object class="se.skl.tp.vp.vagvalagent.SokVagvalsInfoMock">
				<property key="vagvalInputs" value-ref="vagvalInputs" />
			</singleton-object>
		</component>
	</flow>
	
</mule>
